<br><br><br>

<div class="container">
  <%= simple_form_for(@request) do |f| %>

<div class="container register" id="test-div-form">
        <div class="row">
            <div class="col-md-3 register-left">
                <%= image_tag "favicon.ico" %>
                <h3>Hola, <%= @user.responsible %></h3>
                <p class="text-light">...</p>
                <div class="d-flex justify-content-between">
                  <%= f.submit "Guardar", class: "modal-button" %>
                  <%= link_to "Cancelar", designs_path, class: "btn btn-outline-light rounded-pill" %>
                </div>
            </div>

            <div class="col-md-9 register-right">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Solicitud de nuevo diseño</h3>
                        <div class="row register-form ">
                            <div class="col-md-9 mx-auto">
                                <div class="form-group">
                                <%= f.input :project_number_req, label: "Número de proyecto" %>
                                </div>
                                <div class="form-group">
                                 <%= f.input :required_date, as: :date, html5: true %>
                                </div>
                                <div class="form-group">
                                  <%= f.select :status, [['Pendiente','pending'],['Atendido', 'done']] %>
                                </div>
                                <div class="form-group">

                                </div>
                                <div class="form-group">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  </div>
 <% end %>
