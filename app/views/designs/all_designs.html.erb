<div class="container">
  Diseños elaborados por: <%= @user.responsible %> <br>
  Id: <%= @user.id %> <br>
  Email: <%= @user.email %> <br>
  Rol: <%= @user.role %>
</div>
<%= link_to "Ver diseños", designs_path, class: "btn btn-primary" %>
<table class="table table-hover table-dark data-table">
  <thead>
    <tr>
      <th scope="col">No. Proyecto</th>
      <th scope="col">Cliente</th>
      <th scope="col">Nombre del proyecto</th>
      <th scope="col">Revisión</th>
      <th scope="col">Autodesk Viewer</th>
      <th scope="col">Serverbioin</th>
      <th scope="col">Última modificación</th>
      <th scope="col">Estatus</th>
      <th scope="col">Plano</th>
    </tr>
  </thead>
  <tbody>
  <% @designs.each do |design| %>
    <tr>
      <td> <%= link_to design.project_number, design_path(design) %> </td>
      <td> <%= design.client %> </td>
      <td> <%= design.project_name %> </td>
      <td> <%= design.revision %> </td>
      <td> <%= design.autodesk_link %> </td>
      <td> <%= design.server_path %> </td>
      <td> <%= design.updated_at.localtime %> </td>
      <td> <%= design.status %> </td>
      <% if design.document.present? %>
        <td> <%= link_to "SI", design.document %> </td>
      <% else %>
        <td> NO </td>
      <% end %>

    </tr>
  <% end %>
  </tbody>
</table>
