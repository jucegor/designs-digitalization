Número de proyecto: <%=  @design.project_number  %> <br>
Cliente: <%=  @design.client  %> <br>
Número de proyecto: <%=  @design.project_name  %> <br>
Ingeniero a cargo: <%=  @design.responsible  %> <br>
Revisión: <%=  @design.revision  %> <br>
Linea de producción: <%=  @design.line  %> <br>
<% if @user.role == "engineering_manager" || @user.role == "engineer" %>
  Estatus: <%=  @design.status  %> <br>
  Link visor 3D: <%=  @design.autodesk_link  %> <br>
  Ruta del servidor: <%=  @design.server_path  %> <br>
<% end %>
<% if @design.document.present? %>
  <%= link_to (image_tag @design.document.preview(resize_to_limit: [200, 200]), style: "width: 250px; height: auto"), @design.document, target: :_blank %>
<% else %>
  <%= image_tag "BIOIN-screen.png", style: "width: 250px; height: auto" %>
<% end %>
<br>
<%= link_to "Ver diseños", designs_path, class: "btn btn-primary" %>

<% if policy(@design).edit? || @user.role == "engineer" %>
  <%= link_to "Editar información", edit_design_path(@design) , class: "btn btn-primary" %>
<% end %>

<% if @user.role == "engineering_manager" && policy(@design).destroy? %>
  <%= link_to "Eliminar", design_path(@design), method: "delete", class: "btn btn-primary" %>
<% end %>
